/* 轮播图 */
.banner{
  height: 350rpx;
}
.banner swiper-item image{
  width: 100%;
}

/* 通知 */
.notice{
  display: flex;
  height: 80rpx;
  align-items: center;
}
.notice image{
  height: 40rpx;
  width: 40rpx;
  margin-left: 15px;
  margin-right: 12px;
}
.notice swiper{
  height: 100%;
  flex: 1;
}
.notice swiper swiper-item{
  height: 100%;
  line-height: 80rpx;
}
.notice swiper swiper-item view{
  padding-right: 10rpx;
}
.nav {
  display: flex;
  padding: 30rpx 14rpx;
  border-top: 10rpx solid #f5f5f5;
  border-bottom: 10rpx solid #f5f5f5;
}
.nav navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 13rpx;
  color: #666;
}
.nav navigator .yuan {
  height: 80rpx;
  width: 80rpx;
  display: flex;
}
.nav navigator .yuan image{
  height: 60rpx;
  width: 60rpx;
  margin: auto;
}
.nav navigator .name{
  font-size: 28rpx;
  color: #666;
}
.nav navigator .yuan .iconfont {
  color: #fff;
  font-size: 36rpx;
}
.nav navigator:nth-of-type(1) .yuan image{
  height: 52rpx;
  width: 52rpx;
}
.nav navigator:nth-of-type(2) .yuan image{
  height: 55rpx;
  width: 55rpx;
}
.nav navigator:nth-of-type(3) .yuan .iconfont,
.nav navigator:nth-of-type(4) .yuan .iconfont {
  font-size: 40rpx;
}