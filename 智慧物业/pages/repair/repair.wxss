.section{
  padding: 0 25rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.section-value{
  display: flex;
}
.section-value .iconfont{
  color: #aaa1a1;
  margin-left: 10rpx
}
.section-value .select{
  color: #999;
}

.section input{
  text-align: right;
}

.text{
  color: #696969;
}

textarea{
  padding: 25rpx;
  height: 200rpx;
  width: 700rpx;
}

.submit{
  height: 90rpx;
  line-height: 90rpx;
  background-color: #61A5FF;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

/* 添加图片 */
.addImg{
  padding: 25rpx;
}
.addImg .imgItem{
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.addImg .imgItem:nth-child(1),
.addImg .imgItem:nth-child(4n+1){
  margin-left: 0;
}
.addItem{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border: 1rpx dashed rgba(142, 144, 148, .5);
  font-size: 28rpx;
  color: rgb(142, 144, 148);
  /* margin-left: 20rpx!important; */
}
.addItem image{
  height: 80rpx;
  width: 80rpx;
}