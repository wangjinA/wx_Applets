.sell-item {
  padding: 20rpx;
  border-bottom: 10rpx solid #f5f5f5;
}
.sell-item image {
  width: 100%;
  height: 50vw;
  object-fit: cover;
  border-radius: 6rpx;
}
.sell-item .info-wrap {
  padding: 0 16rpx;
}
.sell-item .info-wrap .name{
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.sell-item .info-wrap .add-num {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.sell-item .info-wrap .add-num .add text,
.sell-item .info-wrap .add-num .num{
  font-size: 26rpx;
  color: #999;
}