.user {
  padding: 0 20rpx;
}
.user-list {
  display: flex;
  justify-content: space-between;
  height: 140rpx;
  align-items: center;
  padding: 0 10rpx;
}
.user-list .iconfont {
  font-size: 40rpx;
  margin-right: 20rpx;
}
.user-list > view{
  font-size: 32rpx;
}
.userInfo {
  display: flex;
  align-items: center;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
}
.userInfo .icon-iconfontjiantou5 {
  margin-left: auto;
  margin-right: 20rpx;
  color: #999;
}
.userInfo .name-wrap {
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.userInfo .name-wrap .username {
  font-size: 32rpx;
}
.userInfo .name-wrap .tag {
  background-color: #ff8680;
  color: #fff;
  width: max-content;
  padding: 4rpx 24rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
}
.userInfo .haed-img {
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.userInfo .haed-img image {
  height: 100%;
  width: 100%;
  object-fit: cover;
}
.bottom-line:before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  border-bottom: 1px solid #f1f1f1;
  color: #e1e1e1;
  transform: scaleY(0.5);
  transform-origin: 0 0;
  pointer-events: none;
}